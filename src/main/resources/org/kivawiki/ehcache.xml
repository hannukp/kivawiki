<ehcache>
	<!-- Note: cache directory changes with every version,
	 so that previous version's cached files won't confuse
	 new version (they might deserialize to something the 
	 new version does not expect and fail at runtime). -->
	<diskStore path="java.io.tmpdir/kivawikicache${project.version}" />
		
	<cache name="html" 
		maxElementsInMemory="1000"
		maxElementsOnDisk="10000"
		overflowToDisk="true"
		diskPersistent="false"
		timeToLiveSeconds="600" />
	
	<cache name="file" 
		maxElementsInMemory="1000"
		maxElementsOnDisk="10000"
